# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=fables

# Embedding Model
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2

# Data Configuration
RAW_DATA_PATH=data/aesop_fables_raw.json
DATA_PATH=data/aesop_fables_processed.json

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# LLM Configuration
# Available providers (comma-separated): ollama, gemini_cli, claude_code, codex
LLM_PROVIDERS=ollama,claude_code,gemini_cli,codex
# Default provider
LLM_DEFAULT_PROVIDER=ollama
# Ollama models (comma-separated, first one is default)
OLLAMA_MODELS=llama3.1:8b
